{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location where all resources will be created."
            }
        },
        "wanname": {
            "type": "string",
            "defaultValue": "SampleVirtualWan",
            "metadata": {
                "description": "Name of the Virtual Wan."
            }
        },
        "wansku": {
            "type": "string",
            "defaultValue": "Standard",
            "metadata": {
                "description": "Sku of the Virtual Wan."
            },
            "allowedValues": [
                "Standard",
                "Basic"
            ]
        },
        "hubname": {
            "type": "string",
            "defaultValue": "SampleVirtualHub",
            "metadata": {
                "description": "Name of the Virtual Hub. A virtual hub is created inside a virtual wan."
            }
        },
        "vpngatewayname": {
            "type": "string",
            "defaultValue": "SampleVpnGateway",
            "metadata": {
                "description": "Name of the Vpn Gateway. A vpn gateway is created inside a virtual hub."
            }
        },
        "vpnsitename": {
            "type": "string",
            "defaultValue": "SampleVpnSite",
            "metadata": {
                "description": "Name of the vpnsite. A vpnsite represents the on-premise vpn device. A public ip address is mandatory for a vpn site creation."
            }
        },
        "connectionName": {
            "type": "string",
            "defaultValue": "SampleVpnsiteVpnGwConnection",
            "metadata": {
                "description": "Name of the vpnconnection. A vpn connection is established between a vpnsite and a vpn gateway."
            }
        },
        "vpnsiteAddressspaceList": {
            "type": "array",
            "defaultValue": [],
            "metadata": {
                "description": "A list of static routes corresponding to the vpn site. These are configured on the vpn gateway."
            }
        },
        "vpnsitePublicIPAddress": {
            "type": "string",
            "metadata": {
                "description": "The public IP address of a vpn site."
            }
        },
        "vpnsiteBgpAsn": {
            "type": "int",
            "metadata": {
                "description": "The bgp asn number of a vpnsite."
            }
        },
        "vpnsiteBgpPeeringAddress": {
            "type": "string",
            "metadata": {
                "description": "The bgp peer IP address of a vpnsite."
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "192.168.0.0/24",
            "metadata": {
                "description": "The hub address prefix. This address prefix will be used as the address prefix for the hub vnet"
            }
        },
        "enableBgp": {
            "type": "string",
            "defaultValue": "false",
            "metadata": {
                "description": "This needs to be set to true if BGP needs to enabled on the vpn connection."
            },
            "allowedValues": [
                "true",
                "false"
            ]
        },
        "saLifeTimeSeconds": {
            "type": "int",
            "defaultValue": 3600,
            "metadata": {
                "description": "Security Association Lifetime (Seconds)"
            }
        },
        "saDataSizeKilobytes": {
            "type": "int",
            "defaultValue": 1024000000,
            "metadata": {
                "description": "Security Association Data Size (KB)"
            }
        },
        "ipsecEncryption": {
            "type": "string",
            "defaultValue": "AES256",
            "allowedValues": [
                "None",
                "DES",
                "DES3",
                "AES128",
                "AES192",
                "AES256",
                "GCMAES128",
                "GCMAES192",
                "GCMAES256"
            ],
            "metadata": {
                "description": "IPSec Encryption"
            }
        },
        "ipsecIntegrity": {
            "type": "string",
            "defaultValue": "SHA256",
            "allowedValues": [
                "MD5",
                "SHA1",
                "SHA256",
                "GCMAES128",
                "GCMAES192",
                "GCMAES256"
            ],
            "metadata": {
                "description": "IPSec Integrity"
            }
        },
        "ikeEncryption": {
            "type": "string",
            "defaultValue": "AES256",
            "allowedValues": [
                "DES",
                "DES3",
                "AES128",
                "AES192",
                "AES256",
                "GCMAES256",
                "GCMAES128"
            ],
            "metadata": {
                "description": "IKE Encryption"
            }
        },
        "ikeIntegrity": {
            "type": "string",
            "defaultValue": "SHA256",
            "allowedValues": [
                "MD5",
                "SHA1",
                "SHA256",
                "SHA384",
                "GCMAES256",
                "GCMAES128"
            ],
            "metadata": {
                "description": "IKE Integrity"
            }
        },
        "dhGroup": {
            "type": "string",
            "defaultValue": "DHGroup14",
            "allowedValues": [
                "None",
                "DHGroup1",
                "DHGroup2",
                "DHGroup14",
                "DHGroup2048",
                "ECP256",
                "ECP384",
                "DHGroup24"
            ],
            "metadata": {
                "description": "Diffie-Hellman Group"
            }
        },
        "pfsGroup": {
            "type": "string",
            "defaultValue": "PFS14",
            "allowedValues": [
                "None",
                "PFS1",
                "PFS2",
                "PFS2048",
                "ECP256",
                "ECP384",
                "PFS24",
                "PFS14",
                "PFSMM"
            ],
            "metadata": {
                "description": "Perfect Forward Secrecy Group"
            }
        },
        "sharedKey": {
            "type": "securestring",
            "metadata": {
                "description": "Pre-Shared Key"
            }
        },
        "policyBasedTrafficSelectors": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ],
            "metadata": {
                "description": "Enable this if the OnPremises VPN endpoint needs to be configured as a Policy-Based VPN"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualWans",
            "name": "[parameters('wanname')]",
            "apiVersion": "2020-05-01",
            "location": "[parameters('location')]",
            "properties": {
                "type": "[parameters('wansku')]"
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs",
            "name": "[parameters('hubname')]",
            "apiVersion": "2020-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualWans/', parameters('wanname'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('addressPrefix')]",
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',parameters('wanname'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/vpnSites",
            "name": "[parameters('vpnsitename')]",
            "apiVersion": "2020-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualWans/', parameters('wanname'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('vpnsiteAddressspaceList')]"
                },
                "bgpProperties": {
                    "asn": "[parameters('vpnsiteBgpAsn')]",
                    "bgpPeeringAddress": "[parameters('vpnsiteBgpPeeringAddress')]",
                    "peerWeight": 0
                },
                "deviceProperties": {
                    "linkSpeedInMbps": 0
                },
                "ipAddress": "[parameters('vpnsitePublicIPAddress')]",
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',parameters('wanname'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/vpnGateways",
            "name": "[parameters('vpngatewayname')]",
            "apiVersion": "2020-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs/', parameters('hubname'))]",
                "[resourceId('Microsoft.Network/vpnSites/', parameters('vpnsitename'))]"
            ],
            "properties": {
                "connections": [
                    {
                        "name": "[parameters('connectionName')]",
                        "properties": {
                            "connectionBandwidth": 10,
                            "enableBgp": "[parameters('enableBgp')]",
                            "remoteVpnSite": {
                                "id": "[resourceId('Microsoft.Network/vpnSites', parameters('vpnsitename'))]"
                            }
                        }
                    }
                ],
                "virtualHub": {
                    "id": "[resourceId('Microsoft.Network/virtualHubs',parameters('hubname'))]"
                },
                "bgpSettings": {
                    "asn": 65515
                },
                "ipsecPolicies": [
                    {
                        "saLifeTimeSeconds": "[parameters('saLifeTimeSeconds')]",
                        "saDataSizeKilobytes": "[parameters('saDataSizeKilobytes')]",
                        "ipsecEncryption": "[parameters('ipsecEncryption')]",
                        "ipsecIntegrity": "[parameters('ipsecIntegrity')]",
                        "ikeEncryption": "[parameters('iKEEncryption')]",
                        "ikeIntegrity": "[parameters('ikeIntegrity')]",
                        "dhGroup": "[parameters('dhGroup')]",
                        "pfsGroup": "[parameters('pfsGroup')]"
                    }
                ]
            }
        }
    ]
}